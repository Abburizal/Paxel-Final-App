<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ========================= -->
    <!-- TEXT APPEARANCE STYLES    -->
    <!-- ========================= -->

    <!-- Toolbar Title Style -->
    <style name="TextAppearance.PaxelAR.Toolbar.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Headline Styles -->
    <style name="TextAppearance.PaxelAR.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TextAppearance.PaxelAR.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TextAppearance.PaxelAR.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <!-- Title Styles -->
    <style name="TextAppearance.PaxelAR.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TextAppearance.PaxelAR.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.009375</item>
    </style>

    <style name="TextAppearance.PaxelAR.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.007142857</item>
    </style>

    <!-- Body Styles -->
    <style name="TextAppearance.PaxelAR.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>

    <style name="TextAppearance.PaxelAR.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.017857143</item>
    </style>

    <style name="TextAppearance.PaxelAR.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:letterSpacing">0.033333333</item>
    </style>

    <!-- Label Styles -->
    <style name="TextAppearance.PaxelAR.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.007142857</item>
    </style>

    <style name="TextAppearance.PaxelAR.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:letterSpacing">0.041666667</item>
    </style>

    <style name="TextAppearance.PaxelAR.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:letterSpacing">0.045454545</item>
    </style>

    <!-- Button Text Style -->
    <style name="TextAppearance.PaxelAR.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.007142857</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Data Display Styles (untuk angka/measurement values) -->
    <style name="TextAppearance.PaxelAR.DataLarge" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFeatureSettings">"tnum"</item> <!-- Tabular numbers -->
    </style>

    <style name="TextAppearance.PaxelAR.DataMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFeatureSettings">"tnum"</item> <!-- Tabular numbers -->
    </style>

    <style name="TextAppearance.PaxelAR.DataSmall" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFeatureSettings">"tnum"</item> <!-- Tabular numbers -->
    </style>

    <!-- Legacy/Alternative Text Styles (using system fonts for compatibility) -->
    <style name="TextAppearance.PaxelAR.Label" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/measurement_label</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.PaxelAR.Value" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/measurement_value</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.00625</item>
    </style>

    <style name="TextAppearance.PaxelAR.Subtitle1" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing">0.00625</item>
    </style>

    <style name="TextAppearance.PaxelAR.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:letterSpacing">0.00625</item>
    </style>

    <style name="TextAppearance.PaxelAR.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/text_medium_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <!-- Brand Typography -->
    <style name="TextAppearance.PaxelAR.Brand" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!-- ========================= -->
    <!-- WIDGET STYLES            -->
    <!-- ========================= -->

    <!-- Base Widget Style -->
    <style name="Widget.PaxelAR" parent="">
        <!-- Base widget style -->
    </style>

    <!-- Button Styles -->
    <style name="Widget.PaxelAR.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAppearance">@style/TextAppearance.PaxelAR.Button</item>
    </style>

    <style name="Widget.PaxelAR.Button.Secondary" parent="Widget.PaxelAR.Button">
        <item name="backgroundTint">@color/surface_variant</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <style name="Widget.PaxelAR.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAppearance">@style/TextAppearance.PaxelAR.Button</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Widget.PaxelAR.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAppearance">@style/TextAppearance.PaxelAR.Button</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Button Icon Style -->
    <style name="Widget.PaxelAR.Button.Icon" parent="Widget.PaxelAR.Button">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/on_primary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.PaxelAR.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.PaxelAR.CardView.Elevated" parent="Widget.PaxelAR.CardView">
        <item name="cardBackgroundColor">@color/surface_elevated</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="Widget.PaxelAR.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/on_primary</item>
        <item name="subtitleTextColor">@color/on_primary</item>
        <item name="titleTextAppearance">@style/TextAppearance.PaxelAR.Toolbar.Title</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
    </style>

    <!-- Text Input Layout -->
    <style name="Widget.PaxelAR.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/on_surface_variant</item>
        <item name="android:textColorHint">@color/on_surface_variant</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.PaxelAR.TitleLarge</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.PaxelAR.BodyMedium</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.PaxelAR.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.PaxelAR.DialogButton.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.PaxelAR.DialogButton.Neutral</item>
    </style>

    <style name="Widget.PaxelAR.DialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Widget.PaxelAR.DialogButton.Negative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/error</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Widget.PaxelAR.DialogButton.Neutral" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_medium_gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>