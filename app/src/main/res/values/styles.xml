<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shape appearances for Paxel AR components -->
    <style name="ShapeAppearance.PaxelAR.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.PaxelAR.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.PaxelAR.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.PaxelAR.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/paxel_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaxelAR.SmallComponent</item>
    </style>

    <style name="Widget.PaxelAR.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/paxel_primary</item>
        <item name="android:textColor">@color/paxel_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.PaxelAR.SmallComponent</item>
    </style>

    <style name="Widget.PaxelAR.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/paxel_primary</item>
        <item name="rippleColor">@color/paxel_primary_light</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.PaxelAR.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_primary</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.PaxelAR.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.PaxelAR.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Text appearance styles (missing styles causing build failure) -->
    <style name="TextAppearance.PaxelAR.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.PaxelAR.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Additional missing text appearance styles -->
    <style name="TextAppearance.PaxelAR.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.PaxelAR.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.PaxelAR.Caption" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.PaxelAR.Label" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.PaxelAR.Value" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.PaxelAR.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Toolbar style -->
    <style name="Widget.PaxelAR.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/paxel_primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>
</resources>
