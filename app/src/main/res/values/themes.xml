<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Application Theme -->
    <style name="Theme.PaxelARSpaceScan" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/paxel_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/paxel_primary_dark</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/paxel_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/paxel_primary_light</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/paxel_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_primary</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Shape Appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.PaxelAR.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.PaxelAR.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.PaxelAR.LargeComponent</item>
    </style>

    <!-- No Action Bar Theme for AR Activities -->
    <style name="Theme.PaxelARSpaceScan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Theme for ResultActivity -->
    <style name="Theme.PaxelARSpaceScan.NoActionBar.Result">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/paxel_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.PaxelAR.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.PaxelAR.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.PaxelAR.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.PaxelAR.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.PaxelAR.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.PaxelAR.Headline3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.PaxelAR.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.PaxelAR.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>