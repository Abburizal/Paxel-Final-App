<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.measurement.ARMeasurementActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/arFragment"
        android:name="com.paxel.arspacescan.ui.measurement.CustomArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/gridOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grid_overlay"
        android:alpha="0.2" />

    <!-- Instructions moved to be direct child of ConstraintLayout -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_gradient_top"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Langkah 1/4: Ketuk sudut pertama di alas paket" />

    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_badge_fail"
        android:padding="8dp"
        android:text="@string/angle_validation_warning"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvInstructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/bottom_controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUndo"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/undo"
            android:textColor="@color/white"
            app:icon="@drawable/ic_undo"
            app:iconTint="@color/white"
            app:strokeColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/reset"
            android:textColor="@color/white"
            app:icon="@drawable/ic_refresh"
            app:iconTint="@color/white"
            app:strokeColor="@color/white" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTakePhoto"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/ambil_bukti_foto"
        android:textColor="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/primary_dark"
        app:icon="@drawable/ic_camera"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bottom_controls_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <!-- Tombol Lanjutkan ke Hasil Pengukuran -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinueToResult"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_continue_to_result"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="@color/paxel_red"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_arrow_forward"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnTakePhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <!-- Optimized tracking help using compound drawable -->
    <TextView
        android:id="@+id/tvTrackingHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#CC000000"
        android:padding="24dp"
        android:text="@string/detecting_surface"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:drawableTop="@drawable/ic_move_device"
        android:drawablePadding="16dp"
        android:drawableTint="@color/white"
        android:contentDescription="@string/ar_tracking_help_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <!-- Optimized object detection warning using compound drawable -->
    <TextView
        android:id="@+id/tvObjectDetectionMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp"
        android:visibility="gone"
        android:background="@drawable/bg_counter_badge"
        android:padding="16dp"
        android:text="@string/camera_instruction"
        android:textColor="@color/warning_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_help"
        android:drawablePadding="12dp"
        android:drawableTint="@color/warning_dark"
        android:gravity="center_vertical"
        android:contentDescription="@string/ar_tracking_help_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <!-- Price Estimation Display -->
    <TextView
        android:id="@+id/tvPriceEstimation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_counter_badge"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/estimated_price_medium"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnContinueToResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvTrackingHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:padding="16dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWarning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arahkan kamera ke permukaan datar untuk memulai pengukuran"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>