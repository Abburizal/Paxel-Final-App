<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.measurement.ARMeasurementActivity">

    <!-- AR Fragment - FIXED: Use FragmentContainerView and correct fragment class -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/arFragment"
        android:name="com.paxel.arspacescan.ui.measurement.MeasurementArFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tracking Help Card - Shows when camera is not tracking properly -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvTrackingHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        app:cardBackgroundColor="#80000000"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Gerakkan perangkat untuk mendeteksi permukaan"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:drawableTopCompat="@drawable/ic_move_device"
            android:drawablePadding="8dp"
            app:drawableTintCompat="@android:color/white" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Instructions Card - Shows measurement instructions -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        app:cardBackgroundColor="#80000000"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Instructions TextView - CRITICAL: Expected by ARMeasurementActivity -->
            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ketuk untuk menandai titik pertama alas paket"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Warning Message - Expected by ARMeasurementActivity -->
            <TextView
                android:id="@+id/tvWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#80FF5722"
                android:gravity="center"
                android:padding="8dp"
                android:text="Peringatan: Sudut tidak presisi, hasil mungkin kurang akurat"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Price Estimation - Expected by ARMeasurementActivity -->
            <TextView
                android:id="@+id/tvPriceEstimation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#80009688"
                android:gravity="center"
                android:padding="8dp"
                android:text="Estimasi Harga: Rp15.000 (Sedang)"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Control Buttons Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Undo Button - FIXED: Added contentDescription for accessibility -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUndo"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:enabled="false"
            android:contentDescription="Batalkan titik terakhir"
            app:backgroundTint="#80009688"
            app:icon="@drawable/ic_undo"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconTint="@android:color/white" />

        <!-- Reset Button - FIXED: Added contentDescription for accessibility -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Reset pengukuran"
            app:backgroundTint="#80009688"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconTint="@android:color/white" />

        <!-- Take Photo Button - FIXED: Added contentDescription for accessibility -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTakePhoto"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:contentDescription="Ambil foto"
            app:backgroundTint="#80009688"
            app:icon="@drawable/ic_camera"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconTint="@android:color/white"
            tools:visibility="visible" />

        <!-- Continue Button - Already has text, no contentDescription needed -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinueToResult"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Lanjut ke Hasil"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:backgroundTint="#FFD32F2F"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconTint="@android:color/white"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>