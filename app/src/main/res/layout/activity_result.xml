<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_cream"
    tools:context=".ui.result.ResultActivity">

    <!-- Purple Header with Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:titleTextColor="@color/white"
            app:navigationIconTint="@color/white"
            app:title=""
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtonContainer"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Package Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPackageInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvPackageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/package_info"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Package Name Row -->
                    <TextView
                        android:id="@+id/tvPackageLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        android:text="Nama Paket"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvPackageName"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPackageTitle" />

                    <TextView
                        android:id="@+id/tvPackageName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Paket Default"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:gravity="end"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvPackageLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tvPackageLabel" />

                    <!-- Declared Size Row -->
                    <TextView
                        android:id="@+id/tvDeclaredLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="Ukuran Deklarasi"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvDeclaredSize"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPackageLabel" />

                    <TextView
                        android:id="@+id/tvDeclaredSize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tidak ditentukan"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:gravity="end"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvDeclaredLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tvDeclaredLabel" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Timestamp Badge -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_timestamp_badge"
                android:drawableStart="@drawable/ic_history"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="27 Agustus 2025, 00:01 WIB"
                android:textColor="@color/primary"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                app:drawableTint="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardPackageInfo" />

            <!-- Measurement Results Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMeasurementResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvTimestamp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvMeasurementTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/measurement_results"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Width -->
                    <TextView
                        android:id="@+id/tvWidthLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/width_label"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvWidth"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMeasurementTitle" />

                    <TextView
                        android:id="@+id/tvWidth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="24,36 cm"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:gravity="end"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvWidthLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tvWidthLabel" />

                    <!-- Height -->
                    <TextView
                        android:id="@+id/tvHeightLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/height_label"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvHeight"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvWidthLabel" />

                    <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1,84 cm"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:gravity="end"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvHeightLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tvHeightLabel" />

                    <!-- Length/Depth -->
                    <TextView
                        android:id="@+id/tvDepthLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/length_label"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvDepth"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvHeightLabel" />

                    <TextView
                        android:id="@+id/tvDepth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="25,58 cm"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:gravity="end"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvDepthLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tvDepthLabel" />

                    <!-- Volume -->
                    <TextView
                        android:id="@+id/tvVolumeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/volume_label"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvVolume"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvDepthLabel" />

                    <TextView
                        android:id="@+id/tvVolume"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1.144,44 cm³"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:gravity="end"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvVolumeLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tvVolumeLabel" />

                    <!-- Photo Documentation Section -->
                    <ImageView
                        android:id="@+id/ivPhotoPreview"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/bg_badge_neutral"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:contentDescription="@string/photo_preview"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvVolumeLabel" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddPhoto"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/add_photo"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_medium"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_camera"
                        app:iconTint="@color/primary"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="1dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivPhotoPreview" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnAddPhoto" />

                    <!-- Price Estimation Section -->
                    <TextView
                        android:id="@+id/tvPriceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/price_estimation"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider2" />

                    <!-- Estimated Price -->
                    <TextView
                        android:id="@+id/tvPriceLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Estimasi"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvEstimatedPrice"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPriceTitle" />

                    <TextView
                        android:id="@+id/tvEstimatedPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rp20.000"
                        android:textColor="@color/accent_highlight"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        android:gravity="end"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvPriceLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tvPriceLabel" />

                    <!-- Category -->
                    <TextView
                        android:id="@+id/tvCategoryLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="Kategori"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvSizeCategory"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPriceLabel" />

                    <TextView
                        android:id="@+id/tvSizeCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sedang"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:gravity="end"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvCategoryLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tvCategoryLabel" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Button Container -->
    <LinearLayout
        android:id="@+id/bottomButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_cream"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveResult"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/btn_save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            android:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_save"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewMeasurement"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/btn_new_measurement"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/primary"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>