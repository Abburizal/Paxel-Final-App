<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_cream"
    tools:context=".ui.result.ResultActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.PaxelAR.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/measurement_results" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtonContainer"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPackageInfo"
                style="@style/Widget.PaxelAR.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="171dp" />

                    <TextView
                        android:id="@+id/tvPackageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/package_info"
                        android:textAppearance="@style/TextAppearance.PaxelAR.TitleMedium"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPackageLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Nama Paket"
                        android:textAppearance="@style/TextAppearance.PaxelAR.BodyMedium"
                        android:textColor="@color/text_medium_gray"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_info"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPackageTitle" />

                    <TextView
                        android:id="@+id/tvPackageName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@style/TextAppearance.PaxelAR.DataSmall"
                        android:textColor="@color/text_dark_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvPackageLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline_info"
                        tools:text="Paket Elektronik" />

                    <TextView
                        android:id="@+id/tvDeclaredLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Ukuran Deklarasi"
                        android:textAppearance="@style/TextAppearance.PaxelAR.BodyMedium"
                        android:textColor="@color/text_medium_gray"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_info"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPackageLabel" />

                    <TextView
                        android:id="@+id/tvDeclaredSize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@style/TextAppearance.PaxelAR.DataSmall"
                        android:textColor="@color/text_dark_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvDeclaredLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline_info"
                        tools:text="Sedang" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_timestamp"
                android:drawableStart="@drawable/ic_history"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textAppearance="@style/TextAppearance.PaxelAR.BodyMedium"
                android:textColor="@color/on_primary_container"
                app:drawableTint="@color/on_primary_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardPackageInfo"
                tools:text="14 Agustus 2025, 12:14 WIB" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMeasurementResult"
                style="@style/Widget.PaxelAR.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvTimestamp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="173dp" />

                    <TextView
                        android:id="@+id/tvMeasurementTitle"
                        style="@style/TextAppearance.PaxelAR.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/measurement_results"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvWidthLabel"
                        style="@style/TextAppearance.PaxelAR.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/width_label"
                        android:textColor="@color/text_medium_gray"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_result"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMeasurementTitle" />

                    <TextView
                        android:id="@+id/tvWidth"
                        style="@style/TextAppearance.PaxelAR.DataSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/default_measurement"
                        android:textColor="@color/text_dark_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvWidthLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline_result" />

                    <TextView
                        android:id="@+id/tvHeightLabel"
                        style="@style/TextAppearance.PaxelAR.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/height_label"
                        android:textColor="@color/text_medium_gray"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_result"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvWidthLabel" />

                    <TextView
                        android:id="@+id/tvHeight"
                        style="@style/TextAppearance.PaxelAR.DataSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/default_measurement"
                        android:textColor="@color/text_dark_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvHeightLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline_result" />

                    <TextView
                        android:id="@+id/tvDepthLabel"
                        style="@style/TextAppearance.PaxelAR.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/length_label"
                        android:textColor="@color/text_medium_gray"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_result"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvHeightLabel" />

                    <TextView
                        android:id="@+id/tvDepth"
                        style="@style/TextAppearance.PaxelAR.DataSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/default_measurement"
                        android:textColor="@color/text_dark_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvDepthLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline_result" />

                    <TextView
                        android:id="@+id/tvVolumeLabel"
                        style="@style/TextAppearance.PaxelAR.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/volume_label"
                        android:textColor="@color/text_medium_gray"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_result"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvDepthLabel" />

                    <TextView
                        android:id="@+id/tvVolume"
                        style="@style/TextAppearance.PaxelAR.DataSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/default_volume"
                        android:textColor="@color/text_dark_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvVolumeLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline_result" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:background="@color/divider"
                        app:layout_constraintTop_toBottomOf="@+id/tvVolumeLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvPriceTitle"
                        style="@style/TextAppearance.PaxelAR.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/price_estimation"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider2" />

                    <TextView
                        android:id="@+id/tvPriceLabel"
                        style="@style/TextAppearance.PaxelAR.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Estimasi"
                        android:textColor="@color/text_medium_gray"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_result"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPriceTitle" />

                    <TextView
                        android:id="@+id/tvEstimatedPrice"
                        style="@style/TextAppearance.PaxelAR.DataMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/default_price"
                        android:textColor="@color/accent_highlight"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvPriceLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline_result" />

                    <TextView
                        android:id="@+id/tvCategoryLabel"
                        style="@style/TextAppearance.PaxelAR.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Kategori"
                        android:textColor="@color/text_medium_gray"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_result"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPriceLabel" />

                    <TextView
                        android:id="@+id/tvSizeCategory"
                        style="@style/TextAppearance.PaxelAR.DataSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Sedang"
                        android:textColor="@color/text_dark_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvCategoryLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline_result" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_cream"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveResult"
            style="@style/Widget.PaxelAR.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/btn_save"
            app:icon="@drawable/ic_save" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewMeasurement"
            style="@style/Widget.PaxelAR.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/btn_new_measurement"
            app:icon="@drawable/ic_add" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>