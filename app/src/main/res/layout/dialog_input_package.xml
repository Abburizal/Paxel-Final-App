<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_dialog"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.main.MainActivity">

    <!-- Handle Bar -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_handle" />

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/input_package_name"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp" />

    <!-- Text Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPackageName"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/package_name_hint"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPackageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:minHeight="56dp"
            android:text="@string/default_package_name"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="end"
        android:orientation="horizontal">

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="@string/cancel"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            app:cornerRadius="12dp" />

        <!-- OK Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconTint="@color/white" />
    </LinearLayout>

</LinearLayout>