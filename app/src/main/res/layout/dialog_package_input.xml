<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Package Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Nama Paket"
        app:boxStrokeColor="@color/paxel_primary"
        app:hintTextColor="@color/paxel_primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPackageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="48dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Declared Size Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDeclaredSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/select_declared_size_prompt"
        app:boxStrokeColor="@color/paxel_primary"
        app:hintTextColor="@color/paxel_primary"
        app:endIconMode="dropdown_menu">

        <AutoCompleteTextView
            android:id="@+id/actvDeclaredSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:textSize="16sp"
            android:textColor="@color/text_primary" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
