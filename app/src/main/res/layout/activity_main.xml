<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    android:padding="24dp">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/ivMainLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        android:src="@mipmap/ic_paxel_logo"
        android:contentDescription="@string/main_title"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Title -->
    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.PaxelAR.Headline1"
        android:gravity="center"
        android:letterSpacing="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMainLogo" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/subtitle"
        android:textAppearance="@style/TextAppearance.PaxelAR.Body1"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMainTitle" />

    <!-- Action Buttons Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

        <!-- Start Measurement Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartMeasurement"
            style="@style/Widget.PaxelAR.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/start_measurement"
            android:textAppearance="@style/TextAppearance.PaxelAR.Button"
            app:icon="@drawable/ic_camera"
            app:iconGravity="start"
            app:iconPadding="16dp"
            app:iconTint="@color/white"
            android:elevation="8dp"
            app:backgroundTint="@color/paxel_primary" />

        <!-- History Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistory"
            style="@style/Widget.PaxelAR.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/view_history"
            android:textColor="@color/paxel_primary"
            app:icon="@drawable/ic_history"
            app:iconGravity="start"
            app:iconPadding="16dp"
            app:iconTint="@color/paxel_primary"
            app:strokeColor="@color/paxel_primary"
            app:strokeWidth="2dp" />

        <!-- App Version Info -->
        <TextView
            android:id="@+id/tvVersionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/version_info"
            android:textAppearance="@style/TextAppearance.PaxelAR.Caption"
            android:alpha="0.7" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
