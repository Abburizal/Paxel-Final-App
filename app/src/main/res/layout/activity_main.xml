<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.main.MainActivity">

    <!-- Background Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingTop="60dp"
            android:paddingEnd="24dp"
            android:paddingBottom="32dp">

            <!-- App Logo with Card Background -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivMainLogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_paxel_logo" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Main Title -->
            <TextView
                android:id="@+id/tvMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.PaxelAR.Brand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardLogo" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="@string/subtitle"
                android:textAppearance="@style/TextAppearance.PaxelAR.Subtitle1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMainTitle" />

            <!-- Features Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFeatures"
                style="@style/Widget.PaxelAR.CardView.Elevated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Feature 1 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_3d_rotation"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:text="@string/feature_ar_measurement"
                        android:textAppearance="@style/TextAppearance.PaxelAR.Body1"
                        android:textColor="@color/text_primary"
                        app:drawableTint="@color/accent_primary" />

                    <!-- Feature 2 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_local_shipping"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:text="@string/feature_price_estimation"
                        android:textAppearance="@style/TextAppearance.PaxelAR.Body1"
                        android:textColor="@color/text_primary"
                        app:drawableTint="@color/secondary" />

                    <!-- Feature 3 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_history"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:text="@string/feature_history_tracking"
                        android:textAppearance="@style/TextAppearance.PaxelAR.Body1"
                        android:textColor="@color/text_primary"
                        app:drawableTint="@color/info" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons Container -->
            <LinearLayout
                android:id="@+id/layoutButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardFeatures">

                <!-- Start Measurement Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartMeasurement"
                    style="@style/Widget.PaxelAR.Button.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/start_measurement"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_camera"
                    app:iconSize="24dp" />

                <!-- History Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHistory"
                    style="@style/Widget.PaxelAR.Button.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/view_history"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_history"
                    app:iconSize="24dp" />

                <!-- Settings Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    style="@style/Widget.PaxelAR.Button.Text"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/settings"
                    app:icon="@drawable/ic_settings"
                    app:iconSize="20dp" />

            </LinearLayout>

            <!-- App Version Info -->
            <TextView
                android:id="@+id/tvVersionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alpha="0.7"
                android:text="@string/version_info"
                android:textAppearance="@style/TextAppearance.PaxelAR.Caption"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutButtons" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
